<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sciflare" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:windowBackground">@color/white_shade_100</item>
    </style>

    <style name="Theme.Sciflare" parent="Base.Theme.Sciflare" />

    <style name="inputStyle">
        <item name="android:background">@drawable/input_rounded_rect_empty</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white_shade_100</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="inputBtn">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.038</item>
    </style>

    <style name="Heading1">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Heading3">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_shade_100</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/primary</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

</resources>